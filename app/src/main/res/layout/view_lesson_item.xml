<?xml version="1.0" encoding="utf-8"?>
<com.bdev.hengschoolteacher.ui.views.branded.BrandedListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bdev.hengschoolteacher.ui.views.app.lesson.LessonRowView
            android:id="@+id/lessonItemRowView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
            android:id="@+id/lessonItemTeacherView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_size_1"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/fill_text_basic"
            app:app_font="regular"/>

    </LinearLayout>

</com.bdev.hengschoolteacher.ui.views.branded.BrandedListItemView>