<?xml version="1.0" encoding="utf-8"?>
<com.bdev.hengschoolteacher.ui.views.app.root.HtPageRootView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bdev.hengschoolteacher.ui.views.app.AppHeaderView
            android:id="@+id/monitoringStudentPaymentHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Мониторинг. Студент"
            app:leftIcon="@drawable/ic_arrow_left"/>

        <com.bdev.hengschoolteacher.ui.fragments.student.header.views.StudentHeaderView
            android:id="@+id/monitoringStudentPaymentSecondaryHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/app_size_1"
            android:paddingBottom="@dimen/app_size_1"
            android:paddingStart="@dimen/app_size_2"
            android:paddingEnd="@dimen/app_size_2"
            android:background="@color/fill_contrast_medium">

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Долг:"
                android:textSize="@dimen/font_large"
                android:textColor="@color/fill_text_basic"/>

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:id="@+id/monitoringStudentPaymentDeptView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="1000 Р"
                android:textSize="@dimen/font_large"
                android:textColor="@color/fill_text_basic_accent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/app_size_1"
            android:paddingBottom="@dimen/app_size_1"
            android:paddingStart="@dimen/app_size_2"
            android:paddingEnd="@dimen/app_size_2"
            android:background="@color/fill_contrast_medium">

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ожидаемый долг за месяц:"
                android:textSize="@dimen/font_large"
                android:textColor="@color/fill_text_basic"/>

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:id="@+id/monitoringStudentExpectedMonthlyDebtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="1000 Р"
                android:textSize="@dimen/font_large"
                android:textColor="@color/fill_text_basic_accent"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/monitoringStudentPaymentListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/app_size_0_75"
            android:paddingBottom="@dimen/app_size_0_75"
            android:clipToPadding="false"
            android:divider="@null"
            android:dividerHeight="0dp"/>

    </LinearLayout>

</com.bdev.hengschoolteacher.ui.views.app.root.HtPageRootView>