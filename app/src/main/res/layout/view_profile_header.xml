<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4">

    <com.bdev.hengschoolteacher.ui.views.branded.BrandedSecondaryHeaderItem
        android:id="@+id/profileHeaderMyLessonsView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:header_title="Занятия"
        app:header_active="false"/>

    <com.bdev.hengschoolteacher.ui.views.branded.BrandedSecondaryHeaderItem
        android:id="@+id/profileHeaderMySalaryView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:header_title="Зарплата"
        app:header_active="false"/>

    <com.bdev.hengschoolteacher.ui.views.branded.BrandedSecondaryHeaderItem
        android:id="@+id/profileHeaderMyPaymentsView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:header_title="Оплата"
        app:header_active="false"/>

    <com.bdev.hengschoolteacher.ui.views.branded.BrandedSecondaryHeaderItem
        android:id="@+id/profileHeaderDebtsView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:header_title="Долги"
        app:header_active="false"/>

</LinearLayout>