<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2">

    <com.bdev.hengschoolteacher.ui.views.branded.BrandedSecondaryHeaderItem
        android:id="@+id/myLessonsHeaderItemView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:header_title="Мои занятия"
        app:header_active="true"/>

    <com.bdev.hengschoolteacher.ui.views.branded.BrandedSecondaryHeaderItem
        android:id="@+id/allLessonsHeaderItemView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:header_title="Все занятия"
        app:header_active="false"/>

</LinearLayout>