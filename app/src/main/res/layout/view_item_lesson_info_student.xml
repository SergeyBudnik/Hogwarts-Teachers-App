<?xml version="1.0" encoding="utf-8"?>
<com.bdev.hengschoolteacher.ui.views.branded.BrandedListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:id="@+id/lessonStudentItemNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_large"
                android:textColor="@color/fill_text_basic_accent"/>

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:id="@+id/lessonStudentItemDeptView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_size_0_5"
                android:text="Долг: 2500 Р"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/fill_text_basic_negative"/>

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:id="@+id/lessonStudentItemExpectedDebtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_size_0_5"
                android:text="Ожидаемый долг: 2500 Р"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/fill_text_basic_negative"/>

            <com.bdev.hengschoolteacher.ui.views.common.CommonFontableTextView
                android:id="@+id/lessonStudentItemNoDeptView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_size_0_5"
                android:text="Оплачено"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/fill_text_basic_subtle"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/lessonStudentItemPaymentView"
                android:layout_width="@dimen/app_size_4"
                android:layout_height="@dimen/app_size_4"
                android:layout_marginEnd="@dimen/app_size_0_5"
                android:padding="@dimen/app_size_1"
                android:src="@drawable/ic_payment"
                android:tint="@color/fill_text_basic"
                android:importantForAccessibility="no"/>

            <ImageView
                android:id="@+id/lessonStudentItemAttendanceView"
                android:layout_width="@dimen/app_size_4"
                android:layout_height="@dimen/app_size_4"
                android:padding="@dimen/app_size_1"
                android:src="@drawable/ic_attendance"
                android:tint="@color/fill_text_basic"
                android:importantForAccessibility="no"/>

        </LinearLayout>

    </RelativeLayout>

</com.bdev.hengschoolteacher.ui.views.branded.BrandedListItemView>