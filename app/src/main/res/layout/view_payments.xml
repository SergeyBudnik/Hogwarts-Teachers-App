<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bdev.hengschoolteacher.ui.views.app.payments.PaymentsSummaryView
        android:id="@+id/paymentsSummaryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <ListView
        android:id="@+id/paymentsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/paymentsSummaryView"
        android:clipToPadding="false"
        android:paddingTop="@dimen/app_size_0_5"
        android:paddingBottom="@dimen/app_size_0_5"
        android:divider="@null"
        android:dividerHeight="0dp"/>

</RelativeLayout>