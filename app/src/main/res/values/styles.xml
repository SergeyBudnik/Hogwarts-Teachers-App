<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/layout_background</item>
    </style>

    <declare-styleable name="CommonFontableTextView">
        <attr name="app_font" format="enum">
            <enum name="regular" value="1"/>
            <enum name="light" value="2"/>
            <enum name="bold" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CommonFontableEditTextView">
        <attr name="app_edit_text_font" format="enum">
            <enum name="regular" value="1"/>
            <enum name="light" value="2"/>
            <enum name="bold" value="3"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="BrandedButtonView">
        <attr name="button_text" format="string"/>
        <attr name="button_style" format="enum">
            <enum name="primary_style" value="1"/>
            <enum name="default_style" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BrandedEditTextView">
        <attr name="branded_edit_text_label" format="string"/>
        <attr name="branded_edit_text_hint" format="string"/>
        <attr name="branded_edit_text_type" format="enum">
            <enum name="branded_edit_text_type_text" value="1"/>
            <enum name="branded_edit_text_type_password" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BrandedSecondaryHeaderItem">
        <attr name="header_title" format="string"/>
        <attr name="header_active" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="AppHeaderView">
        <attr name="title" format="string"/>
        <attr name="leftIcon" format="reference"/>
        <attr name="firstRightIcon" format="reference"/>
        <attr name="secondRightIcon" format="reference"/>
        <attr name="thirdRightIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AppMenuRowView">
        <attr name="menuItemName" format="string"/>
        <attr name="menuItemIcon" format="reference"/>
    </declare-styleable>

    <!-- Attendance -->

    <declare-styleable name="StudentAttendanceButtonItemView">
        <attr name="attendanceButtonTitle" format="string"/>
    </declare-styleable>

    <!-- Lessons -->

    <declare-styleable name="LessonsHeaderView">
        <attr name="lessons_item" format="enum">
            <enum name="my_lessons" value="1"/>
            <enum name="all_lessons" value="2"/>
        </attr>
    </declare-styleable>

    <!-- Students -->

    <declare-styleable name="StudentsHeaderView">
        <attr name="students_item" format="enum">
            <enum name="students_list" value="1"/>
            <enum name="students_groups" value="2"/>
            <enum name="students_statistics" value="3"/>
        </attr>
    </declare-styleable>

    <!-- Teachers -->

    <declare-styleable name="TeachersHeaderView">
        <attr name="teachers_item" format="enum">
            <enum name="teachers_list" value="1"/>
        </attr>
    </declare-styleable>

</resources>
